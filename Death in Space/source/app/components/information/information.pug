include ../input/input

mixin information(sheet_type)
  header
    div(class=`sheet-info-${sheet_type}`)
      div.game-title(data-i18n='game_title')=locals['game_title']
      div.mode-title(data-i18n=`sheet_title_${sheet_type}`)=locals[`sheet_title_${sheet_type}`]

    div.header-col2
      if sheet_type == 'character'
        +player_name
      else
        +owner_name

mixin player_name
  div(data-i18n='player_information')=locals['player_information']
  +dotted_line('text', 'player_name')

mixin owner_name
  div(data-i18n='owner_information')=locals['owner_information']
  +dotted_line('text', 'owner_signature')
