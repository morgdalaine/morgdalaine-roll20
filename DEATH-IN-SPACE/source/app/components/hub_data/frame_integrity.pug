
mixin frame_integrity_row
  //- first row
  div.frame-integrity-row
    div.frame-integrity
      div.stat-block.frame-integrity-title
        +label('frame_integrity')
      div.integrity-percent='0%'

    - var frame = 0
    - var sections = 10;
    while frame < sections
      - var val = (1 + frame) * 10;
      div.integrity-increment
        label
          div.integrity-checkbox
            input(
              type='radio'
              name=`attr_frame_integrity`
              value=frame)
            //- div.frame-section
        if val == 50 || val == 100
          div.integrity-percent=`${val}%`
      - frame++;

    div.frame-defense-rating
      div.stat-block.frame-defense-rating-block.dotted-number
        +stat('number', 'defense')

  //- second row
  div.frame-integrity-row-bottom
    div.frame-condition0
      span.frame-integrity-arrow
        | &darr;
      br
      span(data-i18n='condition0')=locals['condition0'] 
    div.frame-spacer
    div.frame-spacer
    div.frame-spacer
    div.frame-roll-on-disasters
      span.frame-integrity-arrow
        | &darr;
      br
      span(data-i18n='roll_disasters_table')=locals['roll_disasters_table']
    div
    div.frame-spacer
    div.frame-spacer
    div.frame-all-is-calm(data-i18n='all_is_calm')=locals['all_is_calm']
