include ../../components/acts/acts

mixin acts_page
  div.page-container
    input(
      type='radio'
      name='attr_page'
      class='acts hide-element'
      value='0'
      checked)
    div.acts.showhide
      div.nav-bar
        div.nav-row
          each act, index in act_tab
            div.nav-child
              label.page-label
                input(
                  type='radio'
                  name='attr_act_page_button'
                  class='hide-element page-button'
                  value=index)
                div.page-button-back(data-i18n=act)=locals[act]
      +act_zero_block
      +act_one_block
      +act_two_block
